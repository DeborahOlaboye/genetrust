# EditorConfig helps maintain consistent coding styles between different editors and IDEs
# For more information, see: https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
quote_type = single

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{html,css,scss}]
indent_size = 2

[Makefile]
indent_style = tab

[Dockerfile]
indent_style = space
indent_size = 4
